# SMB Credentials Secret Template
# Copy to secret.yaml, fill values, then seal with kubeseal
#
# DO NOT commit secret.yaml to git!

apiVersion: v1
kind: Secret
metadata:
  name: smb-credentials
  namespace: media-stack
type: Opaque
stringData:
  # SMB username (es. DOMAIN\user o user@domain.local)
  username: "YOUR_SMB_USERNAME"
  # SMB password
  password: "YOUR_SMB_PASSWORD"
