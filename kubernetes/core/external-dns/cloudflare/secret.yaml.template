# ExternalDNS Cloudflare Secret Template
# Copy to secret.yaml, fill values, then seal with kubeseal
#
# DO NOT commit secret.yaml to git!

apiVersion: v1
kind: Secret
metadata:
  name: cloudflare-credentials
  namespace: external-dns
type: Opaque
stringData:
  # Cloudflare API Token con permessi:
  # - Zone:DNS:Edit
  # - Zone:Zone:Read
  api-token: "YOUR_CLOUDFLARE_API_TOKEN"
