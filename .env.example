# vSphere Environment Configuration
# Copy this file to .env and fill in your values

# vCenter Server
VSPHERE_SERVER="vcenter.homelab.local"
VSPHERE_USERNAME="k8s-capv@vsphere.local"
VSPHERE_PASSWORD="your-secure-password-here"
VSPHERE_DATACENTER="Datacenter"
VSPHERE_DATASTORE="datastore1"
VSPHERE_NETWORK="VM Network"
VSPHERE_RESOURCE_POOL="k8s-homelab"
VSPHERE_FOLDER="/Datacenter/vm/k8s-homelab"
VSPHERE_TEMPLATE="/Datacenter/vm/Templates/flatcar-stable"
VSPHERE_THUMBPRINT="6E:C4:92:E3:F1:A2:B5:C8:D9:E0:F1:A2:B3:C4:D5:E6:F7:A8:B9:C0:D1:E2:F3:A4:B5:C6:D7:E8:F9:A0:B1:C2"

# SSH public key for VM access
VSPHERE_SSH_AUTHORIZED_KEY="ssh-rsa AAAA... your-public-key-here"

# Kubernetes Cluster Configuration
CLUSTER_NAME="homelab-k8s"
KUBERNETES_VERSION="v1.28.5"
CONTROL_PLANE_MACHINE_COUNT=1
WORKER_MACHINE_COUNT=2

# Network Configuration
CONTROL_PLANE_ENDPOINT_IP="192.168.1.100"
POD_CIDR="10.244.0.0/16"
SERVICE_CIDR="10.96.0.0/12"

# MetalLB IP Pool
METALLB_IP_RANGE="192.168.1.200-192.168.1.220"
PIHOLE_IP="192.168.1.53"

# Timezone
TZ="Europe/Rome"

# Application Configuration
PIHOLE_WEBPASSWORD="changeme123"

# GitHub Container Registry (for CI/CD)
GHCR_USERNAME="your-github-username"
GHCR_TOKEN="ghp_xxxxxxxxxxxx"

# Optional: Cloudflare Tunnel
# CLOUDFLARE_TUNNEL_TOKEN="your-tunnel-token"

# clusterctl settings
CLUSTERCTL_DISABLE_VERSIONCHECK=true
